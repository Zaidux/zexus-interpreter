// Gas Limit Exceeded Test
// Tests that resource limits prevent infinite loops

print("=== Resource Limit Test ===")

print("\n--- Test 1: Large Loop (Should Complete) ---")
let count1 = 0
while count1 < 1000 {
    count1 = count1 + 1
}
print("Completed 1,000 iterations")
print(count1)

print("\n--- Test 2: Very Large Loop (Should Fail) ---")
print("Attempting 2,000,000 iterations (exceeds 1M limit)...")
let count2 = 0
while count2 < 2000000 {
    count2 = count2 + 1
}
print("ERROR: Should have been stopped by iteration limit!")
print(count2)
