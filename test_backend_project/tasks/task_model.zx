// Task Model Contract
export contract Task {
    data id = ""
    data user_id = ""
    data title = ""
    data description = ""
    data status = "pending"
    data priority = "medium"
    data created_at = 0
    data updated_at = 0
    data due_date = 0
    
    action create(task_id, owner_id, task_title, task_desc) {
        id = task_id
        user_id = owner_id
        title = task_title
        description = task_desc
        status = "pending"
        priority = "medium"
        created_at = 1704326400  // Mock timestamp
        updated_at = created_at
        due_date = 0
        return true
    }
    
    action update_status(new_status) {
        status = new_status
        updated_at = 1704326400
        return true
    }
    
    action update_priority(new_priority) {
        priority = new_priority
        updated_at = 1704326400
        return true
    }
    
    action set_due_date(date) {
        due_date = date
        updated_at = 1704326400
        return true
    }
    
    action to_dict() {
        return {
            "id": id,
            "user_id": user_id,
            "title": title,
            "description": description,
            "status": status,
            "priority": priority,
            "created_at": created_at,
            "updated_at": updated_at,
            "due_date": due_date
        }
    }
}

print("[TASK_MODEL] Task model loaded")
