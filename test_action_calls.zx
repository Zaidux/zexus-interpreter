// Test action-to-action calls within contracts
print("=== Testing Action-to-Action Calls ===")

contract Calculator {
    data result = 0
    
    action add(a, b) {
        return a + b
    }
    
    action multiply(a, b) {
        return a * b
    }
    
    action calculate_complex(x, y) {
        // Try to call other actions
        let sum = this.add(x, y)
        let product = this.multiply(x, y)
        return sum + product
    }
    
    action set_result(value) {
        this.result = value
    }
    
    action get_result() {
        return this.result
    }
    
    action double_and_save(value) {
        let doubled = this.multiply(value, 2)
        this.set_result(doubled)
        return this.get_result()
    }
}

print("\n--- Test 1: Create Calculator ---")
let calc = Calculator()
print("Calculator created")

print("\n--- Test 2: Direct action calls ---")
let sum = calc.add(5, 3)
print("5 + 3 =")
print(sum)

let product = calc.multiply(5, 3)
print("5 * 3 =")
print(product)

print("\n--- Test 3: Action calling other actions ---")
let complex = calc.calculate_complex(5, 3)
print("calculate_complex(5, 3) =")
print(complex)

print("\n--- Test 4: Action calling multiple actions with state ---")
let final = calc.double_and_save(10)
print("double_and_save(10) =")
print(final)

print("\n=== Action-to-Action Calls Test Complete ===")
